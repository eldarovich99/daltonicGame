<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="76dp"
    android:padding="8dp">
    <TextView
        android:id="@+id/recordNameTextView"
        android:layout_weight="5"
        android:padding="@dimen/marginStd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/recordDateTextView"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/marginStd" />
    <TextView
        android:gravity="end"
        android:id="@+id/recordPercentageTextView"
        android:layout_weight="0"
        android:padding="@dimen/marginStd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="end"
        android:id="@+id/recordResultTextView"
        android:layout_weight="0"
        android:padding="@dimen/marginStd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>